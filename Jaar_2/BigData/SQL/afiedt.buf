CREATE OR REPLACE PROCEDURE asterisk_sal
	(p_emp_id	IN	employees.employee_id%type)
AS
	v_count		number(3) := 0;
	v_star		VARCHAR2(100) := '';
	v_salary	employees.salary%type;
BEGIN
	LOOP
		v_count:= v_count + 1;
		SELECT salary
		INTO v_salary
		FROM employees
		WHERE employee_id = p_emp_id;
		v_star := v_star || '*';
		EXIT WHEN v_count >= v_salary / 1000;
	END LOOP;
	DBMS_OUTPUT.PUT_LINE(v_star);
END asterisk_sal;
/
