<UserControl x:Class="InfluencerApp.UI.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="{Binding Source={StaticResource DarkRadialBrush}}">
            <TextBlock Margin="10,10,10,0" Text="Home" 
                       HorizontalAlignment="Center" FontWeight="Bold" FontSize="30"/>
            <TextBlock Margin="10,50,10,0" TextWrapping="Wrap"
                       Text="Kom alles te weten over de meest invloedrijke influencers in onze wereld..." 
                       HorizontalAlignment="Center" FontSize="24"/>
        </Grid>
    </Grid>
</UserControl>
